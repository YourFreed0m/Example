{
  "name": "audiosurf2-desktop",
  "version": "0.2.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder -w",
    "dist:linux": "electron-builder -l"
  },
  "dependencies": {
    "electron": "^31.3.0",
    "qrcode": "^1.5.4",
    "three": "^0.165.0"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.audiosurf2",
    "productName": "Audiosurf2 Mini",
    "files": [
      "**/*",
      "!node_modules/.cache/**"
    ],
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "build"
    }
  }
}