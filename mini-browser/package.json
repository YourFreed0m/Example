{
  "name": "mini-browser",
  "version": "0.2.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-packager . mini-browser --platform=linux --arch=x64 --overwrite",
    "dist:win": "electron-builder -w",
    "dist:linux": "electron-builder -l"
  },
  "dependencies": {
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.example.minibrowser",
    "productName": "Mini Browser",
    "files": [
      "**/*",
      "!node_modules/.cache/**"
    ],
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "build"
    }
  }
}